datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Event {
  id             String   @id @default(uuid())
  title          String
  description    String?
  startDateTime  DateTime
  endDateTime    DateTime
  color          String   @default("#3b82f6")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}